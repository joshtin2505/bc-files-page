        <Angular className="h-12 w-h-12" />
      </div>
      <div class="slide">
        <AstroIcon className="h-12 w-h-12" />
      </div>
      <div class="slide">
        <NestJS className="h-12 w-h-12" />
      </div>
      <div class="slide">
        <Remix className="h-12 w-h-12" />
      </div>
