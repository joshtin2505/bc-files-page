<style define:vars={{ tecnologies }}>
  .slider .slider-track {
    animation: scroll 80s linear infinite;
    width: calc(80px * (var(--tecnologies) * 2));
  }
  .slider .slide {
    @apply dark:bg-transparent bg-neutral-900 p-2 rounded-lg;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .slider {
    position: relative;

  }
  .slider::before,
  .slider::after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    width: 50px; /* Ajusta el ancho del gradiente seg√∫n sea necesario */
    pointer-events: none;
    z-index: 1;
  }

  .slider::before {
    width: 100%;
    left: 0;
  }
  @keyframes scroll {
    0% {
      transform: translateX(0);
      -webkit-transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-80px * var(--tecnologies)));
    }
  }
</style>
