import Express from "./icons/Express.astro"
import Bun from "./icons/Bun.astro"
import Preact from "./icons/Preact.astro"
import VueUse from "./icons/VueUse.astro"
import Lit from "./icons/Lit.astro"
import AstroIcon from "./icons/AstroIcon.astro"

const tecnologies = [
  "Angular",
  "Astro",
  "NestJS",
  "Remix",
  "Solidjs",
  "Vue",
  "Typescript",
  "Javascript",
