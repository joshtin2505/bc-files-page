      </div>
      <div class="slide">
        <VueUse className="h-12 w-h-12" />
      </div>
      <div class="slide">
        <Lit className="h-12 w-h-12" />
      </div>
      <div class="slide">
        <Javascript className="h-12 w-h-12" />
      </div>
      <div class="slide">
        <Typescript className="h-12 w-h-12" />
      </div>
      <div class="slide">
        <Angular className="h-12 w-h-12" />
      </div>
      <div class="slide">
        <AstroIcon className="h-12 w-h-12" />
      </div>
      <div class="slide">
